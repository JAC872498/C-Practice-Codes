/**/

#include <iostream>

bool allCrossed(bool* crossed,int members){
	for(int x=0;x<members;x++){
		if(crossed[x]==false) return false;
	}return true;
}

int main(){
	int members,group=1;
	std::cin>>members;
	int paces[members];
	bool crossed[members];
	for(int x=0;x<members;x++){
		std::cin>>paces[x];
		crossed[x]=false;
	}
	int totalTime=0;
	while(!allCrossed(crossed,members)){
		if(group!=1&&members>=2&&crossed[0]==false&&crossed[1]==false){
			totalTime+=paces[1];
			crossed[0]=true;
			crossed[1]=true;
			std::cout<<paces[0]<<" "<<paces[1]<<"\n";
		}else{
			totalTime+=paces[group];
			crossed[group]=true;
			crossed[group-1]=true;
			group+=2;
			std::cout<<paces[group-1]<<" "<<paces[group]<<"\n";
		}
		if()
	}
	return 0;
}
