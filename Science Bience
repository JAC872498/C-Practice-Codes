/**/

#include <iostream>
#include <math.h>

int main(){
    int students, tot=0;
    double avr=0;
    std::cin>>students;
    double costs[students-1];
    for(int x=0;x<students;x++){
        std::cin>>costs[x];
        avr+=costs[x];
    }
    avr=floor((avr/(double)students)*100+0.5)/100;
    //std::cout<<avr<<"\n";
    for(int x=0;x<students;x++){
        while(costs[x]>avr+0.01){
            costs[x]-=0.01;
            tot+=0.01;
        }
        while(costs[x]+0.01<avr){
            costs[x]+=0.01;
            tot+=0.01;
        }
    }
    std::cout<<(tot/2);
    return 0;
}
