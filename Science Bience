/**/

#include <iostream>
#include <math.h>
#include <cmath>

int main(){
    int students, tot=0;
    float avr=0;
    std::cin>>students;
    float costs[students-1];
    for(int x=0;x<students;x++){
        std::cin>>costs[x];
        avr+=costs[x];
    }
    avr=floor((avr/(float)students)*100+0.5)/100;
    //std::cout<<avr<<"\n";
    for(int x=0;x<students;x++){
        /*while(costs[x]>avr){
            costs[x]=costs[x]-0.01;
            tot+=0.01;
        }
        while(costs[x]<avr){
            costs[x]=costs[x]+0.01;
            tot+=0.01;
        }*/
        tot+=std::abs(costs[x]-avr);
    }
    std::cout<<(tot);
    return 0;
}
