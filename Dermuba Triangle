#include <iostream>

int main(){
  int currLen=1, currNum=0, maxLen=(2*3+1);
  int nums[2];
  for(int n=0;n<4;n++){
      for(int n2=0;n2<currLen;n2++){
          std::cout<<currNum<<" ";
          currNum+=1;
      }
      std::cout<<"\n";
      currLen+=2;
  }
  return(0);
}
