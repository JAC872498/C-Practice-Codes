/*pg 303 in http://acm.cs.buap.mx/downloads/Programming_Challenges.pdf
Very similar to the 'ants on a chessboard' problem but with a different shape
Happy Thanksgiving!*/

#include <iostream>

int main(){
	int xPos=0,yPos=0,spot=0,horiJump=1,vertJump=1;
	yPos+=vertJump;
	spot+=1;
	std::cout<<spot<<" ("<<xPos<<","<<yPos<<")\n";
	xPos-=horiJump;
	spot+=1;
	horiJump+=1;
	std::cout<<xPos<<" "<<yPos<<" "<<spot<<"\n";
	yPos-=vertJump;
	spot+=1;
	vertJump+=1;
	std::cout<<xPos<<" "<<yPos<<" "<<spot<<"\n";
	xPos+=horiJump;
	spot+=1;
	horiJump+=1;
	std::cout<<xPos<<" "<<yPos<<" "<<spot<<"\n";
	return(0);
}
