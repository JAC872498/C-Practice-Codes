/*pg 303 in http://acm.cs.buap.mx/downloads/Programming_Challenges.pdf
Very similar to the 'ants on a chessboard' problem but with a different shape
Happy Thanksgiving!*/

#include <iostream>

int main(){
	int xPos=0,yPos=0,spot=1,jump=1;
	std::cout<<spot<<" ("<<xPos<<","<<yPos<<")\n";
	yPos+=jump;//the first two moves are weird
	spot+=1;//also the y-axis is inverted
	std::cout<<spot<<" ("<<xPos<<","<<yPos<<")\n";
	xPos-=jump;
	spot+=1;
	std::cout<<spot<<" ("<<xPos<<","<<yPos<<")\n";
	
	yPos-=jump;//Up
	spot+=1;
	std::cout<<spot<<" ("<<xPos<<","<<yPos<<")\n";
	yPos-=jump;//Up right
	xPos+=jump;
	spot+=1;
	std::cout<<spot<<" ("<<xPos<<","<<yPos<<")\n";
	xPos+=jump;//Right
	spot+=1;
	std::cout<<spot<<" ("<<xPos<<","<<yPos<<")\n";
	yPos+=jump+1;//Down+1
	spot+=1+1;
	std::cout<<spot<<" ("<<xPos<<","<<yPos<<")\n";
	yPos+=jump;//Down left
	xPos-=jump;
	spot+=1;
	std::cout<<spot<<" ("<<xPos<<","<<yPos<<")\n";
	xPos-=jump+1;//Left+1
	spot+=1+1;
	std::cout<<spot<<" ("<<xPos<<","<<yPos<<")\n";
	return(0);
}
